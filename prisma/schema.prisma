generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Student {
  id        Int        @id @default(autoincrement())
  lastname     String
  firstname    String
  age          Int
  classRoom    ClassRoom? @relation(fields: [classRoomId], references: [id])
  classRoomId   Int
  StudentGroup StudentGroup[]
}

model StudentGroup {
  StudentId   Int 
  TeamId      Int
  name        String
  student     Student  @relation(fields: [StudentId], references: [id])
  group       Group    @relation(fields: [TeamId], references: [id])

  @@id([TeamId, StudentId])
}

model Group {
  id        Int        @id @default(autoincrement())
  name     String 
  

  StudentGroup StudentGroup[]
}
model ClassRoom {
  id        Int        @id @default(autoincrement())
  name     String 
  Students Student []
}


model User {
  id        Int        @id @default(autoincrement())
  lastname  String 
  firstname String
  email     String
  mtp       String      
}


